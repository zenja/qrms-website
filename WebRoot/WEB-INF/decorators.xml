    <decorator name="inspiring-mark" page="decorator_inspiring_mark.jsp">
    	<pattern>/inspiring_mode/*</pattern>
    </decorator>
    
    <decorator name="conquest-and-defence" page="decorator_conquest_and_defence.jsp">
