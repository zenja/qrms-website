		<pattern>/inspiring_mode/inspiring-display.jsp*</pattern>
		<pattern>/showQRContent.action*</pattern>
		<pattern>/test/no_decorator/*</pattern>
		<pattern>/js/tiny_mce/*</pattern>
		<pattern>/qr-content-preview.jsp*</pattern>
		<pattern>/admin/*</pattern>
